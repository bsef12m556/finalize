
@{
    Layout = "~/Views/Shared/View1.cshtml";
}
@using final.Models;
<body class="container">
    <div id="page-wrapper">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-info alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <i class="fa fa-info-circle"></i>  <strong>Admin Page</strong>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <div style="color: #7d1f1f">
                <h3><a href="/admin/newadmin">Add NEW ADMIN</a></h3>
            </div>


            <div class="row ">

                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary" style="width:250px">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-6 locate" style="width:200px">
                                    <i class="fa fa-comments fa-5x"></i>
                                    <div>
                                        <div style="width:200px; height:300px">
                                            <h4>
                                                <label>list of users:</label>
                                            </h4>
                                            <p>NAMES</p>
                                            <br />
                                            <form action="/admin/deluser">
                                                <br />
                                                <select style="color:black; width:70px" name="id">
                                                    @foreach (user u in Model)
                                                    {

                                                        <option>@u.name</option>
                                                    }

                                                </select>
                                            </form>
                                        </div>
                                    </div>


                                </div>


                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6"></div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary" style="width:350px">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="panel-heading">
                                    <div class=" col-md-6 locate" style="background-color: black; opacity: 0.6; filter: alpha(opacity=60); color: #ffffff ;width:300px; height:300px">
                                        <h4>
                                            <label>New Category:</label>
                                        </h4>
                                        <p>for Events</p>
                                        <br />
                                        <form action="/admin/InsertCategory">
                                            <br />
                                            <input type="text" name="category" class="form-control" style="color:black" />
                                            <br />
                                            <input type="submit" class="btn btn-primary btn-lg  text-center" value="Done" />

                                        </form>
                                        <br />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>

</body>
        
  
