@{
    ViewBag.Title = "ngoprofile";
}


<body class="event container">

    <div class="pull-center" style="width:1000px; padding-top: 100px;height:750px; padding-left:50px">
        <div class="pull-left" style="padding-top:20px">
            <img src="~/Files/@Model.FileName" width="500" height="500" />
        </div>
                <div class="pull-right locate" style="padding-left: 50px; width: 400px">
                    <form action="/ngo/updateprofile" class="form-group" style="padding-right:40px">
                        <div>
                            <h4 style="color:#0094ff">
                                <input type="text" style="visibility:hidden" value="@Model.Email" name="Email" />
                                <br />
                                NAME<br />
                                <input type="text" value="@Model.name" name="name" style="color:#3d3e16" class="form-control" required />
                                
                               
                            </h4>
                            <h4 style="color: #b66d13">
                                <input type="text" style="visibility:hidden" value="@Model.type" name="type" />
                                DESCRIPTION<br />
                                
                                <input type="text" value="@Model.Description" name="Description" style="color:#3d3e16" class="form-control" required />
                            </h4>
                            <h4 style="color: #c13636">
                                <input type="text" style="visibility: hidden" value="@Model.Id" name="Id" />
                                PASSW0RD<br />

                                <input type="password" value="@Model.Password" name="Password" style="color:#3d3e16" class="form-control" required />
                            </h4>
                            
                            <input type="text" style="visibility: hidden" value="@Model.FileName" name="FileName" />

                            <input type="submit" value="Update" class="form-control"/>
                        </div>
                        <input type="text" style="visibility:hidden" value="@Model.Block" name="Block" />

                        <div class="form-group">
                            <hr />
                            <a href="/ngo/getfunds">LIST OF FUNDS </a>
                            <hr>
                        </div>
                        <div class="form-group">
                            <hr />
                            <a href="/ngo/EventInsertion">INSERT EVENT</a>
                            <hr>
                        </div>
                    </form>
                </div>


            </div>
    <footer>
        <hr  style="color:wheat"/>
        <h4 class="text-center" style="color:#c13636"><a href="/Home/Logout">LogOut</a></h4>
        <hr style="color:wheat" />
    </footer>
</body>


